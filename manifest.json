{
  "manifest_version": 3,
  "name": "OSINT Helper",
  "description": "One-click OSINT tools for cybersecurity reconnaissance",
  "version": "1.0",
  "permissions": ["tabs", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
